@using Entities.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="/AdminCategory/Delete/@item.CategoryId"class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminCategory/Update/@item.CategoryId"class="btn btn-warning">Güncelle</a></td>
            <td><a href="#"class="btn btn-primary">Başlıklar</a></td>
        </tr>
    }
</table>
<br />
<a href="/AdminCategory/Add" class="btn btn-info">Yeni Kategori</a>
