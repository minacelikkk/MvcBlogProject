@using Entities.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Durum</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminId</th>
            <td>@item.AdminUserName</td>
            <td>@item.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/Authorization/Delete/@item.AdminId" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/Authorization/Update/@item.AdminId" class="btn btn-warning">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<br />
<a href="/Authorization/Add" class="btn btn-info">Yeni Admin Tanımla</a>


