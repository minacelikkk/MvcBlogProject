@using Entities.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Başlık İşlemleri</h1>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 20%">
                                    Başlık Adı
                                </th>
                                <th style="width: 15%">
                                    Yazarı
                                </th>
                                <th style="width: 10%">
                                    Durum
                                </th>
                                <th style="width: 8%" class="text-center">
                                    Kategori
                                </th>
                                <th style="width: 20%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                //switch (item)
                                //{
                                //    case item.Category.CategoryName =="Tiyatro":
                                //        color = "btn btn-primary btn-sm";
                                //    break;
                                //    case item.Category.CategoryName == "Spor":
                                //        color = "btn btn-info btn-sm";
                                //    break;
                                //    case item.Category.CategoryName == "Yazılım":
                                //        color = "btn btn-danger btn-sm";
                                //    break;
                                //    case item.Category.CategoryName == "Eğitim":
                                //        color = "btn btn-danger btn-sm";
                                //    break;
                                //}
                                if (item.Category.CategoryName == "Tiyatro")
                                {
                                    color= "btn btn-primary btn-sm";
                                }
                                if (item.Category.CategoryName == "Kitap")
                                {
                                    color = "btn btn-info btn-sm";
                                }
                                if (item.Category.CategoryName == "Yazılım")
                                {
                                    color = "btn btn-danger btn-sm";
                                }
                                if (item.Category.CategoryName == "Spor")
                                {
                                    color = "btn btn-danger btn-sm";
                                }
                                if (item.Category.CategoryName == "Film")
                                {
                                    color = "btn btn-warning btn-sm";
                                }
                                if (item.Category.CategoryName == "Dizi")
                                {
                                    color = "btn btn-success btn-sm";
                                }
                                <tr>
                                    <td>
                                        @item.HeadingName
                                    </td>
                                    <td>
                                        <a>
                                            @item.HeadingName
                                        </a>
                                        <br />
                                        <small>
                                           @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                        </small>
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                            </li>
                                        </ul>
                                    </td>
                                    <td>
                                        @item.HeadingStatus
                                    </td>
                                    <td class="project-state">
                                        <span class="@color">@item.Category.CategoryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                            <i class="fas fa-folder">
                                            </i>
                                            Yazılar
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Heading/Update/@item.HeadingId">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Heading/Delete/@item.HeadingId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
<a href="/Heading/Add/" class="btn btn-primary">Yeni Başlık Ekleme</a>
